# This is an example secrets file. DO NOT commit actual secrets to version control!
# Copy this file to secrets.yaml and replace the base64-encoded values with your actual secrets.
# To encode a value: echo -n "your-value" | base64

apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: scouting-outing-manager
type: Opaque
data:
  # Base64 encoded values - replace these with your actual values
  # Example: echo -n "scouting_outings" | base64
  database: c2NvdXRfdHJpcHM=  # scouting_outings
  username: cG9zdGdyZXM=      # postgres
  password: cG9zdGdyZXM=      # postgres (CHANGE THIS!)
---
apiVersion: v1
kind: Secret
metadata:
  name: app-secret
  namespace: scouting-outing-manager
type: Opaque
data:
  # Base64 encoded values - replace these with your actual values
  # Generate a secure secret key: openssl rand -hex 32 | base64
  secret-key: Y2hhbmdlLXRoaXMtdG8tYS1zZWN1cmUtcmFuZG9tLXN0cmluZw==  # CHANGE THIS!