# Production Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_USER=scouting_outing
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD
POSTGRES_DB=scouting_outing_manager

# Security Configuration
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (update with your domain)
BACKEND_CORS_ORIGINS=http://your-domain.com,https://your-domain.com

# Initial Admin User
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=CHANGE_THIS_TO_A_SECURE_ADMIN_PASSWORD

# Clerk Configuration
# Get these from https://dashboard.clerk.com
CLERK_SECRET_KEY=CHANGE_THIS_TO_YOUR_CLERK_SECRET_KEY
CLERK_PUBLISHABLE_KEY=CHANGE_THIS_TO_YOUR_CLERK_PUBLISHABLE_KEY
FRONTEND_URL=http://your-domain.com

# Frontend Build Configuration
VITE_API_URL=/api