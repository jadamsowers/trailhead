# Scouting Outing Manager - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=scouting_outing
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=scouting_outing_manager
POSTGRES_PORT=5432

# Security Configuration
# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
PROJECT_NAME=Scouting Outing Manager
VERSION=1.0.0
API_V1_STR=/api
DEBUG=false

# CORS Configuration (comma-separated list of allowed origins)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Optional: Override the constructed DATABASE_URL
# DATABASE_URL=postgresql+asyncpg://user:pass@host:port/dbname
# Initial Admin User Configuration (for database initialization)
# If INITIAL_ADMIN_PASSWORD is not set, a random password will be generated and displayed
INITIAL_ADMIN_EMAIL=soadmin@scouthacks.net
# INITIAL_ADMIN_PASSWORD=your_admin_password_here  # Optional: leave unset to generate random password
